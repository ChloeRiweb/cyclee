<div class="container col-6">
  <div class="row justify-content-center">
    <div class="d-flex justify-content-center" style="padding-top: 40px">
      <h2>Log in</h2>
    </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs" style="padding-bottom: 22px">
          <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com" %>
          <%= f.input :password, required: false, placeholder: "••••••" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Log in", class: "btn btn-cyclee btn-cool" %>
        </div>
        <div class="link-log">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
  </div>
</div>
