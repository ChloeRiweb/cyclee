<div id="map"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<%= simple_form_for(@ride) do |f| %>
  <%= f.input :bike_friendly, input_html: { value: true }, as: :hidden %>
  <%= f.submit "Safe & Cool", class= "btn btn-primary" %>
<% end %>
